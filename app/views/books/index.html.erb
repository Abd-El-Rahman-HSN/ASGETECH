<p id="notice"><%= notice %></p>

<h1>Books</h1>


<center>
<div class="col-6">
 <% @books.each do |book| %>
  <div class="col-6">
  <h1><%= book.full_name %></h1>
  <img src="/book.png" height='500px' width='400px'></img>
  <p>Author: <%= book.author.frist %> <%= book.author.last %></p>
  <p>Year: <%= book.year %>   -   <%= link_to 'Show', book %></p>
  </div>
  <% end %>
</div>
</center>

<br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Short name</th>
      <th>Full name</th>
      <th>Year</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.full_name.parameterize.underscore %></td>
        <td><%= book.full_name %></td>
        <td><%= book.year %></td>
        <td><%= book.author.frist %> <%= book.author.last %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>