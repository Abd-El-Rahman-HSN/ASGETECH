<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<div class='col-xs-8'>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Full Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.frist %> <%= author.last %></td>
        <td><%= link_to 'Show', author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="col-xs-12">
<%= link_to 'New Author', new_author_path %>
</div>